<UserControl x:Class="goguma.Screen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:goguma"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
    <TextBox x:Name="TBInput" Focusable="True" Text="" PreviewKeyDown="TBInput_KeyDown" TextChanged="TBInput_TextChanged"/>
    <RichTextBox x:Name="RTBMain" Background="#FF202030" FontFamily="{StaticResource Galmuri11-Bold}" IsReadOnly="True" BorderThickness="0" Focusable="True" SelectionTextBrush="#26DEDEDE" SelectionBrush="#26C7C7C7" Foreground="#FF8585B9" GotFocus="RTBMain_GotFocus" TextChanged="RTBMain_TextChanged">
      <FlowDocument>
        <Paragraph>
        </Paragraph>
      </FlowDocument>
    </RichTextBox>

  </Grid>
</UserControl>
